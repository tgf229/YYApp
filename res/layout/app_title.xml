<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_relativelayout" >

    <LinearLayout
        android:id="@+id/title_back_layout"
        style="@style/title_back_layout"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/title_btn_back"
            style="@style/title_btn_back"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_name"
            style="@style/title_name"
            android:textColor="@color/white_color"
            android:maxWidth="220dip"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_call_layout"
        style="@style/title_call_layout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_btn_call"
            style="@style/title_btn_call"
            android:background="@null"
            android:clickable="false"/>
    </LinearLayout>

</RelativeLayout>