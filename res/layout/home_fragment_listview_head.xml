<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1" >

        <com.yy.yyapp.view.MyImageView
            android:id="@+id/default_load_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/default_banner" />

        <android.support.v4.view.ViewPager
            android:id="@+id/circlepager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/circleindicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color" >

        <LinearLayout
            android:id="@+id/icon_default_load_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="7dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon5"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="7dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon6"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon6_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="7dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon7"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon7_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="7dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/icon8"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/default_icon" />

                    <TextView
                        android:id="@+id/icon8_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_loading"
                        android:textColor="@color/black_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/icon_circlepager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/icon_circleindicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hot_coupon_content"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="6dip"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hot_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门现金券"
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hot_coupon_more"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/hot_coupon_title"
                android:layout_alignParentRight="true"
                android:text="更多"
                android:textColor="@color/black_color" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dip" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hot_coupon_pic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_coupon_pic2"
                        android:layout_width="match_parent"
                        android:minHeight="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/default_banner" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/line_grey" />

                    <ImageView
                        android:id="@+id/hot_coupon_pic3"
                        android:layout_width="match_parent"
                        android:minHeight="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/default_banner" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_shop_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hot_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门商家"
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hot_shop_more"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/hot_shop_title"
                android:layout_alignParentRight="true"
                android:text="更多"
                android:textColor="@color/black_color" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hot_shop_content_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dip" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hot_shop_pic1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="99dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey" />

                <ImageView
                    android:id="@+id/hot_shop_pic2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="99dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey" />

                <ImageView
                    android:id="@+id/hot_shop_pic3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="99dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_goods_content"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="6dip"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hot_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门商品"
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hot_goods_more"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/hot_goods_title"
                android:layout_alignParentRight="true"
                android:text="更多"
                android:textColor="@color/black_color" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dip" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hot_goods_pic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_goods_pic2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/default_banner" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/line_grey" />

                    <ImageView
                        android:id="@+id/hot_goods_pic3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/default_banner" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_active_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hot_active_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门活动"
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hot_active_more"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/hot_active_title"
                android:layout_alignParentRight="true"
                android:text="更多"
                android:textColor="@color/black_color" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hot_active_content_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dip" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hot_active_pic1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey" />

                <ImageView
                    android:id="@+id/hot_active_pic2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_banner" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="6dip"
        android:background="@color/white_color" >

        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>