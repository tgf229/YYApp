                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/shop_tag_title"
                    android:layout_alignParentRight="true"
                    android:text="更多"
                    android:textColor="@color/black_color"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
